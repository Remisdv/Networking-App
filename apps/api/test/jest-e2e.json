{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/test/**/*.e2e-spec.ts"],
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      { "tsconfig": "<rootDir>/test/tsconfig.json" }
    ]
  },
  "setupFilesAfterEnv": ["<rootDir>/test/setup-logs.ts"]
}
